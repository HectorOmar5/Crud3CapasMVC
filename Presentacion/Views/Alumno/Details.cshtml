    <input type="button" value="Calcular IMSS" class="btn btn-primary" onclick="IMSS()" /> |
    <input type="button" value="Calcular ISR" class="btn btn-primary" onclick="ISR()" />
</div>

<!-- Ventana Modal IMSS -->
<div class="modal fade" id="ventanaISR" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Encabezado -->
            <div class="modal-header">
                <!--h4 id="tituloModal" class="modal-title">Aportaciones IMSS</h4>-->
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Cuerpo -->
            <div class="modal-body" id="cuerpoModal">
                Cuerpo Modal..
            </div>

            <!-- Pie de Ventana -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    function IMSS() {
        var idalumno = $("#idAlumno").text();
        var url = "@Url.Action("_AportacionesIMSS", "Alumno")" + "/" + idalumno;
        llamarGet(url, recibirRespuesta);
    }

    function ISR() {
        var idalumno = $("#idAlumno").text();
        var url = "@Url.Action("_CalcularISR", "Alumno")" + "/" + idalumno;
        llamarGet(url, recibirRespuesta);
    }



    function recibirRespuesta(Response) {
        $("#ventanaISR").modal();
        $("#cuerpoModal").html(Response);
    }


</script>
